{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}-deployment-template",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "template": "${NAME}-deployment"
        },
        "annotations": {
          "description": "Defines how to deploy ${NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${SOURCE_IMAGE_NAME}:${TAG_NAME}"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${NAME}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}",
            "labels": {
              "name": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${NAME}",
                "image": "",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "ASPNETCORE_ENVIRONMENT",
                    "value": "${ASPNETCORE_ENVIRONMENT}"
                  },
                  {
                    "name": "DB_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-user",
                        "name": "${DATABASE_SERVICE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DB_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-password",
                        "name": "${DATABASE_SERVICE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DB_ADMIN_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-admin-password",
                        "name": "${DATABASE_SERVICE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DB_DATABASE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-name",
                        "name": "${DATABASE_SERVICE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DATABASE_SERVICE_NAME",
                    "value": "${DATABASE_SERVICE_NAME}"
                  },
                  {
                    "name": "PathBase",
                    "value": "${BASE_PATH}"
                  },
                  {
                    "name": "testEmail",
                    "value": "${TEST_EMAIL}"
                  },
                  {
                    "name": "SMTP_HOST",
                    "value": "${SMTP_HOST}"
                  },
                  {
                    "name": "ENCRYPTION_KEY",
                    "value": "${ENCRYPTION_KEY}"
                  },
                  {
                    "name": "BASE_URI",
                    "value": "${BASE_URI}"
                  },
                  {
                    "name": "BASE_PATH",
                    "value": "${BASE_PATH}"
                  },
                  {
                    "name": "DYNAMICS_ODATA_URI1",
                    "value": "${DYNAMICS_ODATA_URI1}"
                  },
                  {
                    "name": "SHAREPOINT_SERVER_APPID_URI",
                    "value": "${SHAREPOINT_SERVER_APPID_URI}"
                  },
                  {
                    "name": "SHAREPOINT_WEBNAME",
                    "value": "${SHAREPOINT_WEBNAME}"
                  },
                  {
                    "name": "SHAREPOINT_AAD_TENANTID",
                    "value": "${SHAREPOINT_AAD_TENANTID}"
                  },
                  {
                    "name": "SHAREPOINT_CLIENT_ID",
                    "value": "${SHAREPOINT_CLIENT_ID}"
                  },
                  {
                    "name": "SHAREPOINT_CERTIFICATE_PASSWORD",
                    "value": "${SHAREPOINT_CERTIFICATE_PASSWORD}"
                  },
                  {
                    "name": "SHAREPOINT_CERTIFICATE_FILENAME",
                    "value": "${SHAREPOINT_CERTIFICATE_FILENAME}"
                  },
                  {
                    "name": "SSG_USERNAME1",
                    "value": "${SSG_USERNAME1}"
                  },
                  {
                    "name": "SSG_PASSWORD1",
                    "value": "${SSG_PASSWORD1}"
                  },
                  {
                    "name": "REDIS_SERVER",
                    "value": "${REDIS_SERVER}"
                  },
                  {
                    "name": "DYNAMICS_ODATA_URI",
                    "value": "${DYNAMICS_ODATA_URI}"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "${CPU_LIMIT}",
                    "memory": "${MEMORY_LIMIT}"
                  },
                  "requests": {
                    "cpu": "${CPU_REQUEST}",
                    "memory": "${MEMORY_REQUEST}"
                  }
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/hc",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "liveinessProbe": {
                  "httpGet": {
                    "path": "/hc",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                }
              }
            ]
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "template": "${NAME}-deployment"
        },
        "annotations": {
          "description": "Exposes and load balances the application pods."
        }
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "${NAME}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "port": {
          "targetPort": "8080-tcp"
        },
        "tls": {
          "insecureEdgeTerminationPolicy": "Redirect",
          "termination": "edge"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "name": "${NAME}-siteminder-route",
        "labels": {
          "app": "${NAME}-siteminder-route"
        }
      },
      "spec": {
        "host": "${SITEMINDER_APPLICATION_DOMAIN}",
        "port": {
          "targetPort": "8080-tcp"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    },
    {
      "kind": "HorizontalPodAutoscaler",
      "apiVersion": "autoscaling/v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "scaleTargetRef": {
          "kind": "DeploymentConfig",
          "name": "${NAME}"
        },
        "minReplicas": 2,
        "maxReplicas": 6
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the resources defined in this template.",
      "required": true,
      "value": "cllc-public"
    },
    {
      "name": "SOURCE_IMAGE_NAME",
      "displayName": "Source Image Name",
      "description": "The name of the image to use for this resource.",
      "required": true,
      "value": "cllc-public"
    },
    {
      "name": "IMAGE_NAMESPACE",
      "displayName": "Image Namespace",
      "description": "The namespace of the OpenShift project containing the imagestream for the application.",
      "required": true,
      "value": "lclb-cllc-tools"
    },
    {
      "name": "TAG_NAME",
      "displayName": "Environment TAG name",
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "required": true,
      "value": "dev"
    },
    {
      "name": "ASPNETCORE_ENVIRONMENT",
      "displayName": "AspNetCore Environment",
      "description": "The ASP Net Core deployment environment setting.",
      "required": true,
      "value": "Production"
    },
    {
      "name": "CPU_LIMIT",
      "displayName": "CPU Limit",
      "description": "Maximum amount of CPU the container can use.",
      "value": "1"
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Memory Limit",
      "description": "Maximum amount of memory the container can use.",
      "value": "4Gi"
    },
    {
      "name": "CPU_REQUEST",
      "displayName": "CPU Request",
      "description": "Starting amount of CPU the container can use.",
      "value": "100m"
    },
    {
      "name": "MEMORY_REQUEST",
      "displayName": "Memory Request",
      "description": "Starting amount of memory the container can use.",
      "value": "2Gi"
    },
    {
      "name": "DATABASE_SERVICE_NAME",
      "displayName": "Database service name",
      "description": "Database service name",
      "value": "mssql"
    },
    {
      "description": "OpenShift cluster private IP range in CIDR notation, used by Nginx ngx_http_realip_module.",
      "displayName": "OpenShift Cluster IP Range",
      "name": "REAL_IP_FROM",
      "required": true,
      "value": "172.51.0.0/16"
    },
    {
      "description": "The endpoint used for SiteMinder routed access to the application.",
      "displayName": "SiteMinder Application Domain",
      "name": "SITEMINDER_APPLICATION_DOMAIN",
      "value": "cannabis-licensing-dev.pathfinder.bcgov"
    },
    {
      "description": "The exposed hostname that will route to the service, e.g., myappname.pathfinder.gov.bc.ca, if left blank a value will be defaulted.",
      "displayName": "Application Domain",
      "name": "APPLICATION_DOMAIN",
      "value": "lclb-cllc-dev.pathfinder.gov.bc.ca"
    },
    {
      "description": "The base path for the application, e.g., /cannabislicensing, if left blank a value will be defaulted.",
      "displayName": "Base Path",
      "name": "BASE_PATH",
      "required": true,
      "value": "/cannabislicensing"
    },
    {
      "description": "Field for a test email.",
      "displayName": "Test Email",
      "name": "TEST_EMAIL"
    },
    {
      "description": "URL for SMTP Host, e.g., apps.smtp.gov.bc.ca, if left blank a value will be defaulted.",
      "displayName": "SMTP Host",
      "name": "SMTP_HOST",
      "required": true,
      "value": "apps.smtp.gov.bc.ca"
    },
    {
      "description": "Encryption key",
      "displayName": "Encryption Key",
      "name": "ENCRYPTION_KEY",
      "required": true
    },
    {
      "description": "The base URI for the application, e.g., https://dev.justice.gov.bc.ca, if left blank a value will be defaulted.",
      "displayName": "Base URI",
      "name": "BASE_URI",
      "required": true,
      "value": "https://dev.justice.gov.bc.ca"
    },
    {
      "description": "URI for Dynamics OData, e.g., https://wsgw.jag.gov.bc.ca/clb/crmuat/api/data/v8.2/, if left blank a value will be defaulted.",
      "displayName": "Dynamics OData URI",
      "name": "DYNAMICS_ODATA_URI1",
      "required": true,
      "value": "https://wsgw.jag.gov.bc.ca/clb/crmuat/api/data/v8.2/"
    },
    {
      "description": "URI for Sharepoint server, e.g., https://bcgovtrial.sharepoint.com/, if left blank a value will be defaulted.",
      "displayName": "Sharepoint Server URI",
      "name": "SHAREPOINT_SERVER_APPID_URI",
      "required": true,
      "value": "https://bcgovtrial.sharepoint.com/"
    },
    {
      "description": "Webname for Sharepoint, e.g., cannabisdev, if left blank a value will be defaulted.",
      "displayName": "Sharepoint Webname",
      "name": "SHAREPOINT_WEBNAME",
      "required": true,
      "value": "cannabisdev"
    },
    {
      "description": "Sharepoint Tennant ID, e.g., bcgovtrial.onmicrosoft.com, if left blank a value will be defaulted.",
      "displayName": "Sharepoint AAD Tennant ID",
      "name": "SHAREPOINT_AAD_TENANTID",
      "required": true,
      "value": "bcgovtrial.onmicrosoft.com"
    },
    {
      "description": "Sharepoint Clien ID",
      "displayName": "Sharepoint Client ID",
      "name": "SHAREPOINT_CLIENT_ID",
      "required": true
    },
    {
      "description": "Sharepoint Certificate Password",
      "displayName": "Sharepoint Certificate Password",
      "name": "SHAREPOINT_CERTIFICATE_PASSWORD",
      "required": true
    },
    {
      "description": "Filename for BCGovTrial.pfx, e.g., /sharepointcert/BCGovTrial.pfx, if left blank a value will be defaulted.",
      "displayName": "Sharepoint Certificate Filename",
      "name": "SHAREPOINT_CERTIFICATE_FILENAME",
      "required": true,
      "value": "/sharepointcert/BCGovTrial.pfx"
    },
    {
      "description": "Username for SSG, e.g., clb_uat, if left blank a value will be defaulted.",
      "displayName": "SSG Username",
      "name": "SSG_USERNAME1",
      "required": true,
      "value": "clb_uat"
    },
    {
      "description": "Password for SSG.",
      "displayName": "SSG Password",
      "name": "SSG_PASSWORD1",
      "required": true
    },
    {
      "description": "URL for redis server, e.g., localhost:6379, if left blank a value will be defaulted.",
      "displayName": "Redis Server",
      "name": "REDIS_SERVER",
      "required": true,
      "value": "localhost:6379"
    },
    {
      "description": "URI for Dynamics OData, e.g., https://lclbcannabisdev.crm3.dynamics.com/api/data/v8.2/, if left blank a value will be defaulted.",
      "displayName": "Dynamics OData URI",
      "name": "DYNAMICS_ODATA_URI",
      "required": true,
      "value": "https://lclbcannabisdev.crm3.dynamics.com/api/data/v8.2/"
    }
  ]
}